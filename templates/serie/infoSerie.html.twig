{% extends 'base.html.twig' %}

{% block title %}Fou2Serie-Serie
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div class="card-deck">
            <div class="card mb-4">
                <div class="view overlay">
                    <div class="card-img-top embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{serie.video}}" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="card-body">
                    <h4 class="card-title">
                        <a>{{serie.titre}}</a>
                    </h4>
                    <h6>résumé</h6>
                    <p class="card-text">{{serie.resume}}</p>
                    <h6>duréé</h6>
                    <p class="card-text">{{ serie.duree|date("d") }}
                        jours et
                        {{ serie.duree|date("H") }}
                        heures.</p>
                    <h6>date de sortie</h6>
                    <p class="card-text">{{serie.premierediffusion|date("d/m/Y") }}</p>
                    <h6>Genre(s)</h6>
                    <p class="card-text">
                        {% for genre in lesGenres %}
                            {{genre.libelleGenre |capitalize}}<br>
                        {% endfor %}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
