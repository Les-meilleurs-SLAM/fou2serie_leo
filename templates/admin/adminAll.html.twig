{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Administration</h1>

        <ul class="list-group">
            {% for serie in lesSeries %}
                <li class="list-group-item d-flex justify-content-between align-items-center">{{serie.titre}}<a class="btn btn-primary" href="{{path('editAdmin',{'id':serie.id})}}" role="button">editer</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
