{% extends 'base.html.twig' %}

{% block title %}Fou2Serie-admin
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1000px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
  
            <h3 class="text-center">Administration</h3>
            <div class="text-center">
                <a class="btn btn-primary col-12" href="{{path('ajoutSerie')}}">Nouvelle Serie</a>
                <a class="btn btn-primary col-12" href="{{path('ajoutGenre')}}">Nouveau Genre</a>
            </div>


        <ul class="list-group">
            {% for serie in lesSeries %}
                <li class="list-group-item align-items-center">{{serie.titre}}
                    <a style="float:right;"  class="btn btn-primary" href="{{path('editAdmin',{'id':serie.id})}}" role="button">editer</a>
                    <a style="float:right;" class="btn btn-primary" href="{{path('suppSerie',{'id':serie.id})}}" role="button">Supprimer</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
